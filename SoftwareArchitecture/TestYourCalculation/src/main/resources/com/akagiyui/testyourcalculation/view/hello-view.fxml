<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.akagiyui.testyourcalculation.controller.HelloController"
            stylesheets="@../css/bootstrapfx.css">
    <center>
        <HBox spacing="10.0" alignment="CENTER">
            <Button text="打开习题簿" styleClass="btn, btn-primary" onAction="#openExercise">
                <graphic>
                    <FontIcon iconLiteral="bi-folder" iconColor="white"/>
                </graphic>
            </Button>
            <Button text="新建习题簿" styleClass="btn, btn-success" onAction="#createExercise">
                <graphic>
                    <FontIcon iconLiteral="bi-journal-plus" iconColor="white"/>
                </graphic>
            </Button>
        </HBox>
    </center>

</BorderPane>
